  function typeMessage(message, element) {
    let index = 0;
    const typingSpeed = 45; 

    function type() {
      if (index < message.length) {
        element.textContent += message.charAt(index);
        index++;
        setTimeout(type, typingSpeed);
      }
    }

    type();
  }
