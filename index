    var currentQuestionIndex = 0;
    var correctAnswers = 0;
    var totalQuestions = quizData.length;
    var quizStartTime;
    var categoryScores = {
      "Collaboration with Stakeholders": 0,
      "Customer Discovery": 0,
      "User Stories": 0,
      "Requirements": 0,
      "Business Process Mapping": 0,
      "User Acceptance": 0
    };

    function shuffleArray(array) {
      for (var i = array.length - 1; i > 0; i--) {
        var j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    function initialize_generate() {
      currentQuestionIndex = 0;
      correctAnswers = 0;
      quizData = shuffleArray(quizData);
      showQuestion();
      startTimer();
      quizStartTime = new Date();
      $(".button-click").hide();
      $(".check-button").show();
      $("#categoryScores").empty();
    }

    function showQuestion() {
      var questionObj = quizData[currentQuestionIndex];
      var question = questionObj.question;
      var options = questionObj.options;

      $("#quizContainer").show();
      $("#question").text(question);

      var dropdown = $(".dropdown");
      dropdown.empty();
      for (var i = 0; i < options.length; i++) {
        dropdown.append($("<option></option>").text(options[i].text));
      }
      $("#result").html("");
    }

    function checkAnswer() {
      var selectedAnswer = $(".dropdown").val();
      var correctAnswer = quizData[currentQuestionIndex].correctAnswer;
      var resultDiv = $("#result");

      if (selectedAnswer === correctAnswer) {
        resultDiv.text("Correct!").addClass("correct").removeClass("incorrect");
        correctAnswers++;
        var tag = quizData[currentQuestionIndex].tag;
        categoryScores[tag]++;
      } else {
        resultDiv.text("Incorrect! The correct answer is: " + correctAnswer).addClass("incorrect").removeClass("correct");
      }

      currentQuestionIndex++;
      updateProgressBar();
      if (currentQuestionIndex < totalQuestions) {
        showQuestion();
      } else {
        showResult();
      }
    }

    function updateProgressBar() {
      var progress = ((currentQuestionIndex + 1) / totalQuestions) * 100;
      $(".progress-bar").css("width", progress + "%");
    }

    function showResult() {
      var resultDiv = $("#result");
      resultDiv.text("Quiz completed!").removeClass("correct incorrect");
      $(".button-click").hide();
      $(".check-button").hide();
      $(".button-click:last").show();
      updateCategoryScores();
    }

    function updateCategoryScores() {
      $("#categoryScores").empty();
      for (var category in categoryScores) {
        var percentage = ((categoryScores[category] / totalQuestions) * 100).toFixed(2);
        $("#categoryScores").append("<div class='category-score'>" + category + ": " + percentage + "%</div>");
      }
    }

    var timer;
    var timeLimitPerQuestion = 30; 
    var totalTimeLimit = 60 * 60; 

    function startTimer() {
      var timeLeft = totalTimeLimit;
      updateTimerDisplay(timeLeft);

      timer = setInterval(function() {
        timeLeft--;
        updateTimerDisplay(timeLeft);

        if (timeLeft === 0) {
          clearInterval(timer);
          checkAnswer();
        }
      }, 1000);
    }

    function updateTimerDisplay(timeLeft) {
      var minutes = Math.floor(timeLeft / 60);
      var seconds = timeLeft % 60;
      $("#timer").text("Time Left: " + formatTime(minutes) + "m " + formatTime(seconds) + "s");
    }

    function formatTime(time) {
      return time < 10 ? "0" + time : time;
    }

    function restartQuiz() {
      $("#result").text("");
      $(".progress-bar").css("width", "0%");
      initialize_generate();
    }

    function previousQuestion() {
      if (currentQuestionIndex > 0) {
        currentQuestionIndex--;
        showQuestion();
        $(".button-click:last").show();
        if (currentQuestionIndex === 0) {
          $(".button-click:first").hide();
        }
      }
    }

    function nextQuestion() {
      if (currentQuestionIndex < totalQuestions - 1) {
        currentQuestionIndex++;
        showQuestion();
        $(".button-click:first").show();
        if (currentQuestionIndex === totalQuestions - 1) {
          $(".button-click:last").hide();
        }
      }
    }
